use core::quantities
use core::strings

fn _unit_name<A: Dim>(x: A) -> String = str_replace("1 ", "", "{unit_of(x)}")

fn _is_scalar<A: Dim>(x: A) -> Bool = "{unit_of(x)}" == "1"

